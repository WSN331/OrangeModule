<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.helloidea.mapper.UserMapper" >
  <resultMap id="BaseResultMap" type="com.example.helloidea.bean.User" >
    <id column="ID" property="id" jdbcType="INTEGER" />
    <result column="ACCOUNT" property="account" jdbcType="VARCHAR" />
    <result column="PASSWORD" property="password" jdbcType="VARCHAR" />
  </resultMap>

  <sql id="Base_Column_List" >
    ID, ACCOUNT, PASSWORD
  </sql>
  
  <select id="findById" resultType="com.example.helloidea.bean.User" >
    select * from INFO_ADMIN
    where ID = #{id,jdbcType=INTEGER}
  </select>

  <insert id="insert" parameterType="com.example.helloidea.bean.User" >
    insert into INFO_ADMIN (ACCOUNT, PASSWORD)
    values (#{account,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
  </insert>

</mapper>